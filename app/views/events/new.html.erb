<%= form_for @event, html: { class: 'needs-validation', novalidate: '' } do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Titre' %>
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label :description, 'Description' %>
      <%= f.text_area :description, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label :start_date, 'Date de début' %>
      <%= f.datetime_select :start_date, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label :duration, 'Durée (en minutes)' %>
      <%= f.number_field :duration, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label :price, 'Prix' %>
      <%= f.number_field :price, class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label :location, 'Localisation' %>
      <%= f.text_field :location, class: 'form-control', required: true %>
    </div>
  
    <%= f.submit 'Créer l\'Événement', class: 'btn btn-primary' %>
  <% end %>
  <% if @event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@event.errors.count, "erreur") %> empêché cet événement d'être sauvegardé :</h2>
    <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>